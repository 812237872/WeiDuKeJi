<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@mipmap/log_bg"
    tools:context=".view.LoginActivity">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="15"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingLeft="@dimen/dp_40"
            android:paddingRight="@dimen/dp_40">
            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@mipmap/login_phone"/>
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="手机号"
                android:backgroundTint="#ccc"
                android:textColor="#fff"
                android:textColorHint="#fff"
                android:id="@+id/login_phone_id"
                android:maxLength="11"
                android:numeric="integer"
                android:paddingLeft="40dp"/>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingLeft="@dimen/dp_40"
            android:layout_marginTop="@dimen/dp_20"
            android:paddingRight="@dimen/dp_40">
            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@mipmap/login_icon_lock_n_hdpi"/>
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="密码"
                android:backgroundTint="#ccc"
                android:textColor="#fff"
                android:password="true"
                android:textColorHint="#fff"
                android:paddingLeft="40dp"
                android:maxLength="8"
                android:id="@+id/login_pwd_id"/>
            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@mipmap/login_icon_eye_n_hdhpi"
                android:layout_alignParentRight="true"
                android:id="@+id/eye_id"
                />
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/login_pwd_id"
                android:layout_marginTop="@dimen/dp_10">
                <CheckBox
                    android:layout_width="wrap_content"
                    android:layout_height="25dp"
                    android:text="记住密码"
                    android:textColor="#fff"
                    android:textSize="15dp"
                    android:id="@+id/login_checkbox_id" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="25dp"
                    android:textSize="15dp"
                    android:textColor="#fff"
                    android:layout_alignParentRight="true"
                    android:text="快速注册"
                    android:id="@+id/to_register"
                    android:gravity="center"/>
            </RelativeLayout>
        </RelativeLayout>
    </LinearLayout>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="16"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_40"
        android:layout_marginLeft="@dimen/dp_40"
        android:textColor="#fff"
        android:text="登录"
        android:id="@+id/login_intent_id"
        android:background="@drawable/login_shape"
        android:gravity="center"
        android:textSize="@dimen/sp_18"
        android:layout_marginRight="@dimen/dp_40"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="4"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_40"
        android:layout_marginRight="@dimen/dp_40"
        android:orientation="horizontal"
        android:gravity="center_vertical">
        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="1dp"
            android:background="#ccc"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="第三方账号快速登录"
            android:textSize="@dimen/sp_10"
            android:textColor="#fff"
            />
        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="1dp"
            android:background="#ccc"/>
    </LinearLayout>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="2"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_30"
        android:orientation="horizontal">
        <TextView
            android:layout_width="0dp"
            android:layout_weight="12"
            android:layout_height="wrap_content"/>
        <ImageView
            android:layout_width="@dimen/dp_30"
            android:layout_height="@dimen/dp_30"
            android:id="@+id/login_weixin_id"
            android:src="@mipmap/log_icon_weixin_default_hdpi"/>
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="6"/>
        <ImageView
            android:layout_width="@dimen/dp_30"
            android:layout_height="@dimen/dp_30"
            android:id="@+id/login_face_id"
            android:src="@mipmap/login_icon_artificial_intelligence_n_hdpi"/>
        <TextView
            android:layout_width="0dp"
            android:layout_weight="12"
            android:layout_height="wrap_content"/>
    </LinearLayout>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="3"/>
</LinearLayout>